<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="FederationSportiveManager" transaction-type="RESOURCE_LOCAL">
    	<provider>org.hibernate.ejb.HibernatePersistence</provider>
    	<class>Competition</class>
    	<class>Epreuve</class>
    	<class>Sportif</class>
    	<class>Amateur</class>
    	<class>Licencier</class>
    	<properties>
    		<!-- data base connection setting-->
    		<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
    		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/federationsportivejpa?useSSl=false&amp;serverTimezone=UTC"/>
    		<property name="javax.persistence.jdbc.user" value="root"/>
    		<property name="javax.persistence.jdbc.password" value="Devil3197!"/>
    		
    		<!-- SQL dialecte -->
    		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
    		
    		<!-- Create or update table automatically using mapping metadata-->
    		<property name="hibernate.hbm2ddl.auto" value="update"/>
    		
    		<!-- pretty print the SQL and log file and console -->
    		<property name="hibernate.format_sql" value="true"/>
    		<property name="hibernate.max_fetch_deep" value="3"/>
    	</properties>
    </persistence-unit>
    
</persistence>